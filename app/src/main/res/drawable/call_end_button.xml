<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/darker_red" />

                    <size
                        android:width="@dimen/circle_button_size"
                        android:height="@dimen/circle_button_size" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/red" />

                    <size
                        android:width="@dimen/circle_button_size"
                        android:height="@dimen/circle_button_size" />
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:bottom="@dimen/margin_medium"
        android:drawable="@drawable/ic_call_end_white_24dp"
        android:left="@dimen/margin_medium"
        android:right="@dimen/margin_medium"
        android:top="@dimen/margin_medium" />
</layer-list>